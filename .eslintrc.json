{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true,
    "mocha": true,
    "shelljs": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "sampleGlobal": true,
    "sampleGlobal2": false
  },
  "rules": {
    "indent": ["error", 2],
    "semi": ["error", "always"],
    "no-console": ["off"],
    "curly": [
      2,
      "all"
    ],
    "keyword-spacing": ["error", {}],
    "space-infix-ops": "error",
    "no-implicit-coercion": ["error",
      {
        "boolean": false,
        "string": true,
        "number": false
      }
    ],
    "no-with": "error",
    "no-multiple-empty-lines": "error",
    "brace-style": ["error", "1tbs",
      {
        "allowSingleLine": true
      }
    ],
    "no-trailing-spaces": "error",
    "eol-last": "error",
    "no-empty": ["error",
      {
        "allowEmptyCatch": true
      }
    ],
    "array-bracket-spacing": ["error", "never", {}],
    "space-in-parens": ["error", "never"],
    "no-mixed-spaces-and-tabs": "error",
    "indent": ["error", 2,
      {
        "SwitchCase": 1
      }
    ],
    "no-bitwise": "error",
    "camelcase": 0,
    "curly": "error",
    "eqeqeq": "error",
    "guard-for-in": "error",
    "no-extend-native": "error",
    "wrap-iife": 0,
    "indent": [
      2,
      2,
      {
        "SwitchCase": 1
      }
    ],
    "no-use-before-define": 0,
    "new-cap": 0,
    "no-caller": "error",
    "no-empty": "error",
    "no-irregular-whitespace": "error",
    "no-new": 0,
    "no-plusplus": 0,
    "quotes": 0,
    "no-undef": "error",
    "no-unused-vars": "error",
    "strict": 0,
    "max-params": 0,
    "max-depth": 0,
    "max-statements": 0,
    "complexity": 0,
    "max-len": 0,
    "semi": 0,
    "no-cond-assign": 0,
    "no-debugger": 0,
    "no-eq-null": 0,
    "no-eval": 0,
    "no-unused-expressions": 0,
    "block-scoped-var": 0,
    "no-iterator": 0,
    "linebreak-style": 0,
    "comma-style": [
      2,
      "last"
    ],
    "no-loop-func": 0,
    "no-multi-str": 0,
    "require-yield": 0,
    "valid-typeof": 0,
    "no-proto": 0,
    "no-script-url": 0,
    "no-shadow": "error",
    "dot-notation": "error",
    "no-new-func": 0,
    "no-new-wrappers": 0,
    "no-invalid-this": 0
  }
}
